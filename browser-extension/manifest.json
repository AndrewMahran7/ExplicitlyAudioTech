{
  "manifest_version": 3,
  "name": "Explicitly Audio Capture",
  "version": "1.0.1",
  "description": "Captures browser tab audio and sends it to Explicitly Desktop for real-time censorship",
  "permissions": [
    "tabCapture",
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
